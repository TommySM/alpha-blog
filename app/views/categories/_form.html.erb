 <%= turbo_frame_tag "errors" do %>
      <%= render 'shared/errors', errors: @category.errors.full_messages, errors_record_name: "Category" %>
      <% end %>
      <%= turbo_frame_tag "user" do %>
        <%= form_with(model: @category, class: "shadow p-3 mb-3 bg-info rounded", local: true, multipart: true) do |f| %>
          <div class="form-group row">
            <%= f.label :name, "Category name", class: "col-2 col-form-label text-light" %>
            <div class="col-10">
              <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a category name" %>
            </div>
          </div>

          <div class="form-group row justify-content-center">
            <%= f.submit class: "btn btn-outline-light btn-lg" %>
          </div>
        <% end %>
      <% end %>